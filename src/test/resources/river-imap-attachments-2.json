{
   "type":"imap",
   "mail.store.protocol":"mock_imaps",
   "mail.debug":"false",
   "mail.debug.auth":"false",
   "user":"es_imapriver_unittest@localhost",
   "password":"",
   "interval":"60s",
   "threads":5,
   "folderpattern":"^INBOX$",
   "with_striptags_from_textcontent":true,
   "with_attachments":true,
   "with_text_content":true,
   "with_flag_sync":false,
   "mail_index_name":"imapriverdata",
   "mail_type_name":"mail",
   "type_mapping":{
      "mail":{
         "properties":{
            "attachments":{
               "properties":{
                  "content":{
                     "type":"attachment",
                     "path":"full",
                     "fields":{
                        "content":{
                           "type":"string",
                           "store":true,
                           "term_vector":"with_positions_offsets"
                        },
                        "name":{
                           "store":"yes"
                        },
                        "title":{
                           "store":"yes"
                        },
                        "date":{
                           "store":"yes"
                        },
                        "author":{
                           "store":"yes"
                        },
                        "keywords":{
                           "store":"yes"
                        },
                        "content_type":{
                           "store":"yes"
                        },
                        "content_length":{
                           "store":"yes"
                        },
                        "language":{
                           "store":"yes"
                        }
                     }
                  },
                  "contentType":{
                     "type":"string"
                  },
                  "filename":{
                     "type":"string"
                  },
                  "name":{
                     "type":"string"
                  },
                  "size":{
                     "type":"long"
                  }
               }
            }
         }
      }
   }
}